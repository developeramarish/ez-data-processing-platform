<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- MassTransit for messaging -->
    <PackageReference Include="MassTransit" />
    <PackageReference Include="MassTransit.RabbitMQ" />

    <!-- Kafka client for KafkaOutputHandler -->
    <PackageReference Include="Confluent.Kafka" />

    <!-- Hazelcast for distributed caching -->
    <PackageReference Include="Hazelcast.Net" />

    <!-- MongoDB for data access -->
    <PackageReference Include="MongoDB.Entities" />

    <!-- Health checks -->
    <PackageReference Include="AspNetCore.HealthChecks.MongoDb" />

    <!-- Logging -->
    <PackageReference Include="Serilog.AspNetCore" />
    <PackageReference Include="Serilog.Sinks.Console" />

    <!-- gRPC for OpenTelemetry -->
    <PackageReference Include="Grpc.Net.Client" />

    <!-- CSV processing -->
    <PackageReference Include="CsvHelper" />

    <!-- Excel processing -->
    <PackageReference Include="EPPlus" />

    <!-- JSON processing -->
    <PackageReference Include="Newtonsoft.Json" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Shared\DataProcessing.Shared.csproj" />
  </ItemGroup>

</Project>
